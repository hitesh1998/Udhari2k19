<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewconectionActivity">

    <EditText
        android:id="@+id/conection_name"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/inputs"
        android:padding="8dp"
        android:hint="Enter Name"
        android:textAllCaps="false"
        android:textSize="15dp"
        android:drawableStart="@drawable/edit_status"
        android:textAlignment="center"
        android:textStyle="bold">

    </EditText>

    <EditText
        android:id="@+id/conection_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/conection_name"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="17dp"
        android:background="@drawable/inputs"
        android:drawableStart="@drawable/phone"
        android:hint="write phone number "
        android:padding="8dp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="15dp"
        android:textStyle="bold">

    </EditText>

    <Button
        android:id="@+id/add_conection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/conection_number"
        android:layout_marginStart="17dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="17dp"
        android:background="@drawable/buttons"
        android:text="Add Conection"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="19dp"
        android:textStyle="bold">


    </Button>
</RelativeLayout>